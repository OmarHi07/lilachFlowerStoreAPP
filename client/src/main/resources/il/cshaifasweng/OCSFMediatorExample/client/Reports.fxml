<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>


<?import java.lang.Integer?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ReportsController">

    <VBox alignment="TOP_CENTER" spacing="10.0"
          AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10"
          prefHeight="500.0" prefWidth="880.0">

        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text='Complaints Report - Detailed Data'
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TableView fx:id="complainTable" prefWidth="860" prefHeight="160">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="100" />
                <TableColumn fx:id="complainTextColumn" text="Complaint Text" prefWidth="500" />
                <TableColumn fx:id="complainDateColumn" text="Complaint Date" prefWidth="260" />
            </columns>
        </TableView>

        <Label text='Histogram - Complaints by Date'
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <BarChart fx:id="dailyComplaintsChart" prefWidth="860" prefHeight="180">
            <xAxis>
                <CategoryAxis label="Date" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Number of Complaints" />
            </yAxis>
        </BarChart>

        <Label text='Histogram Report - Complaints by Branch'
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               visible="false" managed="false" />

        <TableView fx:id="histogramTable" prefWidth="860" prefHeight="160"
                   visible="false" managed="false">
            <columns>
                <TableColumn fx:id="branchColumn" text="Branch Name" prefWidth="430" />
                <TableColumn fx:id="countColumn" text="Complaint Count" prefWidth="430" />
            </columns>
        </TableView>

        <!-- טווח תאריכים -->
        <Label text="Select Date Range:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <HBox alignment="CENTER" spacing="10">
            <DatePicker fx:id="fromDatePicker" promptText="From Date" />
            <DatePicker fx:id="toDatePicker" promptText="To Date" />
        </HBox>

        <!-- בחירת סניף -->
        <Label text="Select Branch:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <ComboBox fx:id="branchComboBox" promptText="Choose Branch" prefWidth="150">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="All"/>
                        <String fx:value="1"/>
                        <String fx:value="2"/>
                    </FXCollections>
                </items>
        </ComboBox>

        <Button text="Load Complaints Report" onAction="#loadOrdersHistogram" />
    </VBox>
</AnchorPane>
