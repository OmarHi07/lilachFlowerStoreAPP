<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ReportsController">
    <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <Label text='דו"ח תלונות - נתונים פרטניים' style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="complainTable" prefWidth="600" prefHeight="250">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="100"/>
                <TableColumn fx:id="complainTextColumn" text="תוכן תלונה" prefWidth="250"/>
                <TableColumn fx:id="complainDateColumn" text="תאריך תלונה" prefWidth="250"/>
            </columns>
        </TableView>

        <Label text='דו"ח היסטוגרמה - תלונות לפי סניף' style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="histogramTable" prefWidth="600" prefHeight="250">
            <columns>
                <TableColumn fx:id="branchColumn" text="שם הסניף" prefWidth="300"/>
                <TableColumn fx:id="countColumn" text="מספר תלונות" prefWidth="300"/>
            </columns>
        </TableView>

        <Button text="טען דוח תלונות" onAction="#loadComplaintsHistogram"/>

    </VBox>
</AnchorPane>
