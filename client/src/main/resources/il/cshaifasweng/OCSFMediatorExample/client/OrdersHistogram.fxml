<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.Integer?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.OrdersReportsController">

    <VBox alignment="TOP_CENTER" spacing="10.0"
          AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10"
          prefHeight="500.0" prefWidth="880.0">

        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text="Orders Report - Detailed Data"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label text="Histogram - Orders by Date"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <BarChart fx:id="ordersBarChart" prefWidth="860" prefHeight="180">
            <xAxis>
                <CategoryAxis label="Date"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Number of Orders"/>
            </yAxis>
        </BarChart>

        <Label text="Histogram Report - Orders by Branch"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               visible="false" managed="false" />

        <TableView fx:id="ordersTable" prefWidth="860" prefHeight="160">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                <TableColumn fx:id="addressColumn" text="Address" prefWidth="100" />
                <TableColumn fx:id="dateOrderColumn" text="Order Date" prefWidth="100" />
                <TableColumn fx:id="dateReceiveColumn" text="Receive Date" prefWidth="100" />
                <TableColumn fx:id="greetingColumn" text="Greeting" prefWidth="100" />
                <TableColumn fx:id="nameReceivesColumn" text="Recipient" prefWidth="120" />
                <TableColumn fx:id="phoneReceivesColumn" text="Phone" prefWidth="100" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="60" />
                <TableColumn fx:id="sumColumn" text="Sum" prefWidth="60" />
                <TableColumn fx:id="timeOrderColumn" text="Order Time" prefWidth="80" />
                <TableColumn fx:id="timeReceiveColumn" text="Receive Time" prefWidth="80" />
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="80" />
                <TableColumn fx:id="branchIdColumn" text="Branch ID" prefWidth="80" />
                <TableColumn fx:id="customerIdColumn" text="Customer ID" prefWidth="80" />
            </columns>
        </TableView>

        <!-- טווח תאריכים -->
        <Label text="Select Date Range:"
               style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <HBox alignment="CENTER" spacing="10">
            <DatePicker fx:id="fromDatePicker" promptText="From Date" />
            <DatePicker fx:id="toDatePicker" promptText="To Date" />
        </HBox>
        <!-- בחירת סניף -->
        <Label text="Select Branch:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <ComboBox fx:id="branchComboBox" promptText="Choose Branch" prefWidth="150">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="1"/>
                    <String fx:value="2"/>
                    <String fx:value="All"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Button text="Load Orders Report" onAction="#loadOrdersHistogram" />
    </VBox>
</AnchorPane>
