<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="689.0" prefWidth="1138.0"
            style="-fx-background-color: linear-gradient(from 13.6364% 32.197% to 100.0% 28.0303%, #c7bca6 0.0%, #eaeaea 100.0%);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.OrdersReportsController">

    <!-- 转 住: 砖 + Purchases (住" 转) -->
    <TableView fx:id="flowerSummaryTable" layoutX="280.0" layoutY="73.0" prefHeight="183.0" prefWidth="860.0">
        <columns>
            <TableColumn fx:id="fsNameCol" prefWidth="520" text="Flower"/>
            <TableColumn fx:id="fsQtyCol"  prefWidth="320" text="Purchases"/>
        </columns>
    </TableView>

    <DatePicker fx:id="fromDatePicker" layoutX="21.0" layoutY="212.0" prefHeight="26.0" prefWidth="157.0" promptText="From Date">
        <effect><DropShadow/></effect>
    </DatePicker>
    <DatePicker fx:id="toDatePicker" layoutX="21.0" layoutY="256.0" prefHeight="26.0" prefWidth="158.0" promptText="To Date">
        <effect><DropShadow/></effect>
    </DatePicker>

    <!-- 住专: X = 砖 驻专, Y = Purchases -->
    <BarChart fx:id="ordersBarChart" layoutX="245.0" layoutY="318.0" prefHeight="360.0" prefWidth="895.0"
              categoryGap="15.0" barGap="3.0">
        <xAxis>
            <CategoryAxis label="Flower"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Purchases" forceZeroInRange="true"/>
        </yAxis>
    </BarChart>

    <!-- 住专  砖住  -->

    <ComboBox fx:id="branchComboBox" blendMode="MULTIPLY" layoutX="25.0" layoutY="367.0" prefWidth="150" promptText="Choose Branch">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="All"/>
                <String fx:value="Haifa"/>
                <String fx:value="TelAviv"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Button blendMode="COLOR_BURN" layoutX="31.0" layoutY="432.0" onAction="#loadOrdersHistogram" text="Load Purchases Report">
        <effect><DropShadow/></effect>
    </Button>

    <Text fill="#231204" layoutX="525.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text=" Purchases Report - Summary" wrappingWidth="442.4">
        <font><Font name="Gabriola" size="31.0"/></font>
    </Text>
    <Text fill="#231204" layoutX="520.0" layoutY="302.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text=" Histogram - Purchases by Flower" wrappingWidth="420.0">
        <font><Font name="Gabriola" size="29.0"/></font>
    </Text>
    <Text layoutX="21.0" layoutY="191.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Date Range:">
        <font><Font name="Serif Regular" size="20.0"/></font>
    </Text>
    <Text layoutX="38.0" layoutY="351.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Branch:">
        <font><Font name="Serif Regular" size="20.0"/></font>
    </Text>
</AnchorPane>